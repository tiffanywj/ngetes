    <style>
        body {
            background-color: rgb(207, 207, 207);
            background: url(../images/background2.png);
            background-repeat: repeat-y;
            height: 100%;
            width: 100%;
            background-position: center;
            background-size: cover;
            position: relative;
        }

        .overlay {
            width: 100%;
            height: 110%;
            background: black;
            opacity: .2;
            position: absolute;
            background-size: cover;
            z-index: -1000;
        }

        .card-body {
            color: black;
        }

        a {
            text-decoration: none !important;
        }

        .tombolsearch {
            width: 30px;
            height: 29.5px;
            margin: 0% 0% 0% 0%;
        }

        .searchbar {
            border: none;
            height: 30px;
            width: 50%;
        }


        @media screen and (min-width: 641px) and (max-width: 960px) {
            body {
                background-color: rgb(207, 207, 207);
                background: url(../images/background2.png);
                overflow-y: hidden;
                width: 100%;
                background-position: center;
                background-size: cover;
                position: relative;
            }

            .searchbar {
                width: 100%;
            }

            .tombolsearch {
                width: 30px;
                height: 29.5px;
                margin: 0% 0% 0% 0%;
            }

            .linkcart {
                margin-left: 5%;
            }

            .linkwishlist {
                margin-left: 18%;
            }
        }

        nav .linkcart span {
            padding-left: 5px;
        }

        nav .linkwishlist span {
            padding-left: 5px;
        }

        .linkcart a {
            font-size: 14px;
            color: white;
            background: rgba(0, 0, 219, 0.753);
            padding: 5px;
            text-decoration: none;
            cursor: pointer;
            font-family: 'Open Sans', sans-serif;
        }

        .linkwishlist a {
            font-size: 14px;
            color: white;
            background: rgba(0, 0, 219, 0.753);
            padding: 5px;
            text-decoration: none;
            cursor: pointer;
            font-family: 'Open Sans', sans-serif;
        }

        .linkcart ion-icon {
            vertical-align: middle;
            font-size: 20px;
            padding-right: 5px;
        }

        .linkwishlist ion-icon {
            vertical-align: middle;
            font-size: 20px;
            padding-right: 5px;
        }
