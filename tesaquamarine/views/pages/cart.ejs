<body>
  <div class="overlay"></div>

  <a href="/">
    <div class="logo"></div>
  </a>

  <div class="title">
    <h1><b>Cart</b></h1>
  </div>

  <main>
    <div class="borderluar">
      <div class="borderdalem">

        <div class="basket">
          <div class="basket-labels">
            <ul>
              <li class="item item-heading"><b>Item(s)</b></li>
              <li class="price"><b>Price</b></li>
              <li class="quantity"><b>Quantity</b></li>
              <li class="subtotal"><b>Subtotal</b></li>
            </ul>
          </div>
          <% if(products.length> 0) { %>
            <% products.forEach(function(items) { %>
              <div class="basket-product">
                <div class="item">
                  <div class="product-image">
                    <a href="<%= items.item.link %>">
                      <img src="<%= items.item.imagePath %>" alt="" class="product-frame" />
                    </a>
                  </div>

                  <div class="product-details">
                    <h1><strong>
                        <%= items.item.name %>
                      </strong></h1>
                    <!-- <p><strong>Fresh Salmon Fillet</strong></p> -->
                  </div>
                </div>
                <div class="price"><b>
                    <%= items.item.price %>
                  </b></div>
                <div class="quantity">
                  <span class="input-group-btn">
                    <a href="/cart/reduce/<%= items.item._id %>"><button type="button"
                        class="btn btn-default btn-number" data-type="minus" data-field="quant[1]">
                        -</button></a>
                  </span>
                  <input type="text" name="quant[1]" value="<%= items.qty %>" min="0" class="quantity-field">
                  <span class="input-group-btn">
                    <a href="/cart/increase/<%= items.item._id %>"><button type="button"
                        class="btn btn-default btn-number" data-type="plus" data-field="quant[1]">
                        +</button></a>
                  </span>
                </div>
                <div class="subtotal"><b>
                    <%= items.price %>
                  </b></div>
                <div class="remove">
                  <a href="/cart/remove/<%= items.item._id %>">
                    <button><i class="fa fa-close"></i> Remove</button>
                  </a>
                </div>
                <div class="wishlist">
                  <button>
                    <a href="/cart/add-to-wishlist-from-cart/<%= items.item._id %>"><i class="far fa-heart"></i></a>
                    Move To Wishlist
                  </button>
                </div>
              </div>
              <% }); %>
        </div>
        <aside>
          <div class="summary">
            <div class="summary-total-items">
              <span class="total-items"></span><b> Items in your Cart</b>
            </div>
            <div class="summary-subtotal">
              <div class="subtotal-title"><b>Subtotal</b></div>
              <div class="subtotal-value final-value" id="basket-subtotal">
                <b>
                  <%= totalPrice %>
                </b>
              </div>
              <div class="summary-promo hide">
                <div class="promo-title">Promotion</div>
                <div class="promo-value final-value" id="basket-promo"></div>
              </div>
            </div>
            <div class="summary-total">
              <div class="total-title">Total</div>
              <div class="total-value final-value" id="basket-total">
                <b>
                  <%= totalPrice %>
                </b>
              </div>
            </div>
            <div class="summary-checkout">
              <a href="/checkout"><button class="checkout-cta"><b>Checkout</b></button></a>
            </div>
            <div class="summary-wishlist">
              <a href="/wishlist"><button class="wishlist-cta"><b>Wishlist</b></button></a>
            </div>
            <div class="Continue-Shopping">
              <a href="/productlist"><button class="Shopping-cta">
                  <b>Continue Shopping</b>
                </button></a>
            </div>
          </div>
        </aside>
        <% } %>
      </div>
    </div>
  </main>
</body>

</html>