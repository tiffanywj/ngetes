    <!--------------------------------------------- CONTACT US --------------------------------------------->
    <section class="contact" id="contact">
      <br /><br /><br /><br /><br /><br /><br /><br />
      <div class="contact-1">
        <h1><b>Contact Us</b></h1>
        <div class="container">
          <div class="row gy-2">
            <div class="col-6">
              <div class="kontak">
                <i class="fas fa-phone-alt"></i>
                <p>021 345 6789</p>
              </div>
            </div>
            <div class="col-6">
