    <!---------------------------------------------PRODUCTS ---------------------------------------------->
    <section class="products" id="products">
      <h1 class="judulproducts" style="padding-top: 5%"><b>Products</b></h1>
      <marquee behavior="scroll" direction="right" scrollamount="12" style="
          color: rgba(236, 55, 55, 0.959);
          font-size: 30px;
          text-shadow: 2px 0px 20px rgb(69, 66, 240);
          width: 100%;
        ">
        New Recommend!</marquee>
      <div class="box-group active">
        <% products.forEach((product) => { %>
          <% if (product.status == 1) { %>
          <div class="box">
            <div class="slide-product">
              <img src="<%= product.imagePath %>" alt="1" />
              <div class="overlay2">
                <a href="<%= product.link %>" class="tombolliat">See Product</a>
              </div>
            </div>
            <div class="detail-product">
              <div class="type">
                <a href="<%= product.link %>">
                  <%= product.name %>
                </a>
                <span>Recommended</span>
              </div>
              <a href="<%= product.link %>" class="harga">Rp <%= product.price %>/kg</a>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="col-md-12"></div>
            </div>

            <div class="col-md-6">
              <div class="col-md-12"></div>
            </div>
          </div>
          <% } %>
          <% }) %>
      </div>

      <div class="seeallproduct">
        <a href="/productlist"><button class="see-product-button">
            <b>See Other Products</b>
          </button></a>
